<div class="container">
  <div class="row team-header">
    <div class="col-xs-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-ribbon"><%= @team.user.username %></h3>
        </div>
        <div class="bg-primary panel-body">
          <h2 class="big-text">HI</h2>
        </div>
        <div class="panel-footer">
          <h3 class="panel-ribbon">MANAGER</h3>
        </div>
      </div>
    </div>
    <div class="col-xs-6 middle-part">
      <div class="team-stats">
        <h1 class="bg-primary name-banner"><%= @team.name %></h1>
          <div class="team-stats">
            <h3>Playing Since: <%= @team.created_at.strftime("%b %e '%y") %></h3>
            <h3>Total Views: <%= @team.watches %></h3>
          </div>
      </div>
      <div class="admin-panel">
        <% if @is_me %>
          <ul class="nav nav-pills nav-justified">
            <li>
              <%= link_to "Rename Team", edit_team_path %>
            </li>
            <li>
              <%= link_to "Release Team", @team, method: :delete, data: { confirm:
                'This will delete your team and release all your videos. Confirm?' } %>
            </li>
            <li>
              <%= link_to "Scout players", new_video_path %>
            </li>
        <% end %>
      </div>
    </div>
    <div class="col-xs-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-ribbon">Points: <%= @team.points %></h3>
        </div>
        <div class="panel-body bg-primary">
          <h2 class="big-text"><%= @rank %></h2>
        </div>
        <div class="panel-footer">
          <h3 class="panel-ribbon">RANK</h3>
        </div>
      </div>
    </div>
  </div>
</div>




<h1>team show</h1>
<% if @is_me %>
  <%= link_to "Rename Team", edit_team_path %>
  <%= @team.name %> <%= link_to "Release Team", @team, method: :delete, data:
  { confirm: 'This will delete your team and release all your videos. Confirm?' } %>
  <% if @team.videos.length < 5 %>
    <%= link_to "Scout for players", new_video_path %>
  <% end %>
<% end %>
Team Bankroll: <%= @team.bankroll %> Total Team Salary: <%= @team.salary %>

<ul>
  <% if @videos.present? %>
    <% @videos.each do |video| %>
        <li>
        <%= link_to video.title, video %> has scored <%= video.points %>
         points since joining your team on <%= video.created_at.strftime("%b %e'%y") %><br>
         It has been watched <%= video.watches %> times since then.
         Salary: <%= video.salary %>

        <% if @is_me %>

            <!-- PROB REFACTOR THIS ISH AND PUT IT IN A HELPER? -->
            <%= link_to "Release video", team_video_path(@team, video),
            method: :delete, confirm: "This will release the video as a free agent. Confirm?" %>

        <% end %>
        <%= link_to image_tag(video.thumbnail, alt: video.title), video %>
      </li>
    <% end %>
  <% end %>
</ul>
