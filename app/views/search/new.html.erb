<h1>Paste a youtube id in here!</h1>
<%= form_for @video do |form| %>
  <%= form.label :yt_id, "Youtube ID" %>
  <%= form.text_field :yt_id %>
  <%= form.submit('Find by ID') %>
<% end %>

<h1>Or Search!</h1>
<%= form_tag({ action: 'create_many', controller: 'videos'}) do %>
  <%= label_tag(:search_term, "Search for: ") %>
  <%= text_field_tag(:search_term) %>
  <%= submit_tag('Search') %>
<% end %>
